{
  "name": "slidezone",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:electron": "node scripts/build-electron.js",
    "electron": "npm run build:electron && electron .",
    "kill-port": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
    "electron-dev": "npm run kill-port && npm run build:electron && concurrently \"npm run dev\" \"sleep 3 && electron . --dev\"",
    "electron-build": "npm run build && npm run build:electron && electron-builder",
    "dist": "npm run build && npm run build:electron && electron-builder --publish=never"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vite": "^4.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.slidezone.app",
    "productName": "SlideZone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dist/index.html",
      "dist/assets/*.js",
      "dist/assets/*.css",
      "!dist/media/**/*",
      "!dist/media0/**/*",
      "!dist/media2/**/*",
      "!dist/medis/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
